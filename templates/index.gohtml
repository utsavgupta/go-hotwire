{{ template "_head" .}}
<h1>Welcome to the Hotwire Demo</h1>

{{ range .Messages }}
<p><b>{{ .Sender }}</b>: {{ .Text }}</p>
{{ end }}

<form action="/chat" method="post">
    <label for="message">Message</label><br>
    <textarea name="message" id="message"></textarea>
    <input type="submit" value="Send">
</form>
{{ template "_footer" .}}